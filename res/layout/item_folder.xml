<com.enj.widget.ScrollLinerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_list_folder_item_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableRight="@drawable/selector_list_item_ic"
        android:padding="@dimen/drawPadding"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/delete_action"
        android:layout_width="@dimen/delete_action_len"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item_delete" />

</com.enj.widget.ScrollLinerLayout>